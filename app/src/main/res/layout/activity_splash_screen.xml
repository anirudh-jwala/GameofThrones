<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cersi_background"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:fontFamily="@font/alegreya_black_italic"
        android:text="@string/app_title"
        android:textSize="56sp" />

    <ProgressBar
        android:id="@+id/splashProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="#F8BBD0"
        android:progress="@android:integer/config_shortAnimTime"
        android:progressTint="#F48FB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>